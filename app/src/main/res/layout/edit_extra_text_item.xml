    <TextView
        android:layout_below="@+id/extra_text_key_TV"
        android:id="@+id/extra_text_content_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorContentText"
        android:text="内容"/>
    <View
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorExtraTextTitleBG"
        android:layout_below="@id/extra_text_content_TV"/>

