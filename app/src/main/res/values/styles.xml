<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/padding_M</item>
        <item name="android:paddingTop">@dimen/padding_M</item>
        <item name="android:paddingBottom">@dimen/padding_M</item>
        <item name="android:paddingStart">@dimen/padding_M</item>
        <item name="android:paddingEnd">@dimen/padding_M</item>
        <item name="android:textSize">@dimen/textsize_L</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="DialogMessageTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_XL</item>
        <item name="android:paddingBottom">@dimen/padding_XL</item>
        <item name="android:paddingStart">@dimen/padding_XL</item>
        <item name="android:paddingEnd">@dimen/padding_XL</item>
        <item name="android:textSize">@dimen/textsize_M</item>
        <item name="android:textColor">@color/colorContentText</item>
        <item name="android:drawablePadding">@dimen/padding_S</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_M</item>
        <item name="android:paddingEnd">@dimen/padding_M</item>
        <item name="android:paddingTop">@dimen/padding_S</item>
        <item name="android:paddingBottom">@dimen/padding_S</item>
        <item name="android:textSize">@dimen/textsize_M</item>
        <item name="android:layout_marginStart">@dimen/padding_M</item>
        <item name="android:layout_marginEnd">@dimen/padding_M</item>
        <item name="android:layout_marginTop">@dimen/padding_M</item>
        <item name="android:layout_marginBottom">@dimen/padding_M</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogConfirmButtonStyle" parent="CommonButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_M</item>
        <item name="android:layout_marginStart">@dimen/padding_M</item>
        <item name="android:layout_marginEnd">@dimen/padding_M</item>
        <item name="android:layout_marginTop">@dimen/padding_M</item>
        <item name="android:layout_marginBottom">@dimen/padding_M</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="RecordItemTitleTextViewStyle" parent="DialogTitleTextViewStyle">
        <item name="android:textSize">@dimen/textsize_S</item>
        <item name="android:background">@color/colorExtraTextTitleBG</item>
    </style>

    <style name="RecordItemContentTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorContentText</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="GroupShapeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/item_group_shape</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="MainItemShapeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/item_group_shape</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="MenuItemTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/colorContentText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="LinearLayoutPaddingViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>





    <attr name="not_touched_color" format="color"/>
    <attr name="touched_color" format = "color"/>
    <attr name = "validate_failed_color" format="color"/>
    <attr name = "validate_success_color" format = "color"/>
    <attr name = "count" format = "integer"/>
    <attr name = "max_time" format="integer"/>

    <declare-styleable name = "GestureView">
        <attr name="not_touched_color"/>
        <attr name="touched_color"/>
        <attr name = "validate_failed_color"/>
        <attr name = "validate_success_color"/>
        <attr name = "count"/>
        <attr name = "max_time"/>
    </declare-styleable>

</resources>
